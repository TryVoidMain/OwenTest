<Window x:Class="FlightsWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:m="clr-namespace:FlightsWPF.Models"
        mc:Ignorable="d"
        DataContext="{Binding MainWindowViewModel, Source={StaticResource Locator}}"
        Title="{Binding Title}" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type m:FlightInfoVM}">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding FlightNumber}" />
                    <TextBlock Text="{Binding DepartureTime}" />
                </StackPanel>
                <DataGrid AutoGenerateColumns="True" ItemsSource="{Binding Passengers}">

                </DataGrid>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <ContentControl Content="{Binding First}">
            
        </ContentControl>
    </Grid>
</Window>
